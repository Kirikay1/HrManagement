<Page x:Class="HrManagement.Views.HrManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HrManagement.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Управленние персоналом">

    <Page.Resources>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="#77B34B"/>
        <SolidColorBrush x:Key="HeaderGreenBrush" Color="#EAF8DF"/>
        <SolidColorBrush x:Key="CardGreenBrush" Color="#E6F5C9"/>
        <SolidColorBrush x:Key="PanelGrayBrush" Color="#E5E5E5"/>
        <Style x:Key="PaleCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGreenBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="96"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGreenBrush}" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border Width="70" Height="70"
                    Background="{StaticResource AccentGreenBrush}"
                    CornerRadius="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="12,0">
                    <TextBlock Text="логотип"
                           FontWeight="Bold" 
                           Foreground="Black" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           />
                </Border>

                <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="10"
                    Height="40"
                    VerticalAlignment="Center"
                    Margin="24,0">
                    <TextBlock Text="Организационная структура"
                           VerticalAlignment="Center"
                           Margin="12,0"
                           FontWeight="Bold"
                           Foreground="Black"/>
                </Border>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="18,18,18,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель -->
            <Border Background="{StaticResource PanelGrayBrush}" Padding="18" CornerRadius="2" Margin="0,0,12,0">
                <Canvas x:Name="canvasOrgChart" MinHeight="560" MinWidth="690">
                    <!-- Дороги России -->
                    <Border x:Name="nodeTop" Background="{StaticResource CardGreenBrush}"  Padding="8" Canvas.Left="300" Canvas.Top="8">
                        <TextBlock Text="Дороги России" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Административный департамент -->
                    <Border x:Name="nodeLeftDept" Background="{StaticResource CardGreenBrush}" Padding="8" Canvas.Left="140" Canvas.Top="60">
                        <TextBlock Text="Административный департамент" HorizontalAlignment="Center"/>
                    </Border>
                    <Border x:Name="nodeRightDept" Background="{StaticResource CardGreenBrush}"  Padding="8" Canvas.Left="430" Canvas.Top="60" Width="180">
                        <TextBlock Text="Академия Умные дороги" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Договорной отдел -->
                    <Border x:Name="nodeContract" Background="{StaticResource CardGreenBrush}"  Padding="8" Canvas.Left="30" Canvas.Top="120" Width="160">
                        <TextBlock Text="Договорной отдел" HorizontalAlignment="Center"/>
                    </Border>
                    <Border x:Name="nodeCommon" Background="{StaticResource CardGreenBrush}"  Padding="8" Canvas.Left="250" Canvas.Top="120" Width="180">
                        <TextBlock Text="Общий отдел" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Управление маркетинга -->
                    <Border x:Name="nodeMarketing" Background="{StaticResource CardGreenBrush}" Padding="8" Canvas.Left="380" Canvas.Top="180" Width="180">
                        <TextBlock Text="Управление маркетинга" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Лицензионный отдел -->
                    <Border x:Name="nodeLicense" Background="{StaticResource CardGreenBrush}" Padding="8" Canvas.Left="170" Canvas.Top="180" Width="160">
                        <TextBlock Text="Лицензионный отдел" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Линии -->
                    <!-- Линии (лучше ниже по ZIndex, чтобы не перекрывали карточки) -->
                    <Line x:Name="lineTopToLeft" Stroke="Black" StrokeThickness="1.4" Canvas.ZIndex="0"/>
                    <Line x:Name="lineTopToRight" Stroke="Black" StrokeThickness="1.4" Canvas.ZIndex="0"/>

                    <Line x:Name="lineLeftToContract" Stroke="Black" StrokeThickness="1.2" Canvas.ZIndex="0"/>

                    <!-- НОВАЯ линия: Адм. департамент -> Общий отдел -->
                    <Line x:Name="lineLeftToCommon" Stroke="Black" StrokeThickness="1.2" Canvas.ZIndex="0"/>

                    <Line x:Name="lineRightToCommon" Stroke="Black" StrokeThickness="1.2" Canvas.ZIndex="0"/>

                    <!-- Общий отдел -> нижние блоки -->
                    <Line x:Name="lineCommonToContractLeft" Stroke="Black" StrokeThickness="1.2" Canvas.ZIndex="0"/>
                    <Line x:Name="lineCommonToMarketingRight" Stroke="Black" StrokeThickness="1.2" Canvas.ZIndex="0"/>
                </Canvas>
            </Border>

            <!-- Правая панель -->
            <Border Grid.Column="1" Background="{StaticResource PanelGrayBrush}" Padding="18" CornerRadius="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Карточка 1 -->
                            <Border Style="{StaticResource PaleCard}">
                                <StackPanel>
                                    <TextBlock FontSize="12" Foreground="Gray">Лицензионный отдел  —  Директор штабгаума</TextBlock>
                                    <TextBlock FontWeight="Bold" FontSize="14" Margin="0,6,0,0">Иванов Иванов Иванович</TextBlock>
                                    <TextBlock Margin="0,6,0,0">+7 233 333 333   ivanov.super@dorogi.ru</TextBlock>
                                    <TextBlock Margin="0,6,0,0" Foreground="Gray">Ресепшен</TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Карточка 2 -->
                            <Border Style="{StaticResource PaleCard}">
                                <StackPanel>
                                    <TextBlock FontSize="12" Foreground="Gray">Общий отдел  —  Директор штабгаума</TextBlock>
                                    <TextBlock FontWeight="Bold" FontSize="14" Margin="0,6,0,0">Петров Петр Газинович</TextBlock>
                                    <TextBlock Margin="0,6,0,0">+7 233 333 333   petrov.super@dorogi.ru</TextBlock>
                                    <TextBlock Margin="0,6,0,0" Foreground="Gray">1234</TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Карточка 3 -->
                            <Border Style="{StaticResource PaleCard}">
                                <StackPanel>
                                    <TextBlock FontSize="12" Foreground="Gray">Лицензионный отдел  —  Директор штабгаума</TextBlock>
                                    <TextBlock FontWeight="Bold" FontSize="14" Margin="0,6,0,0">Иванов Иванов Иванович</TextBlock>
                                    <TextBlock Margin="0,6,0,0">+7 233 333 333   ivanov.super@dorogi.ru</TextBlock>
                                    <TextBlock Margin="0,6,0,0" Foreground="Gray">Ресепшен</TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Кнопка добавления -->
                    <Button Grid.Row="1" Width="48" Height="48" Background="{StaticResource CardGreenBrush}" BorderBrush="#BFDFA3"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,12" FontSize="20" FontWeight="Bold">
                        +
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
